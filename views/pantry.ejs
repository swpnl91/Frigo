<%- include('partials/header'); %>

  <div class="box" id="heading">
    <form action="/recipes" method="get">
      <div class="itemName">
        <h1 class="pantry"> Pantry </h1>
        <button class="recipeBtn" type="submit"><i class="fa-solid fa-burger"></i></button>
      </div>
    </form>
  </div>
  
  <div class="box">
    
    <% itemsArray.forEach(function(item) { %>

      <form action="/deletepantry" method="post">
        <div class="itemName">
          <button type="submit" class="deleteItem" name="deletePantryItem" value="<%= item.name %>"><i class="fa-solid fa-trash-can"></i></button>
          <p><%=  item.name  %></p>
        </div>
      </form>
    
    <% }) %>

  </div>

<%- include('partials/footer'); %>